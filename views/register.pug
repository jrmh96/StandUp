extends layout
    
block content
    .main.container.row
        h1.display-4.m-b-2 Sign Up

        //register form
        form(method='POST' action='/register')
            div.form-group
                label(for='first') First Name:
                input#firstName.form-control(type='text', placeholder='First Name' name='first')
            div.form-group
                label(for='last') Last Name:
                input#lastName.form-control(type='text', placeholder='Last Name' name='last')
            div.form-group
                label(for='email') Email:
                input#email.form-control(type='text', placeholder='Email' name='email')
            div.form-group
                label(for="location") City and Town:
                |(i.e. Los Angeles, California)
                input#location.form-control(type='text', placeholder='Location', name='location')
            div.form-group
                label(for="password") Password:
                input#password.form-control(type="password", placeholder="Password" name="password" autocomplete="off")
            div.form-group
                label(for="password2") Confirm Password:
                input#password2.form-control(type="password", placeholder="Confirm password" name="confirmPassword", autocomplete="off")
            button.btn.btn-primary(type='submit') Sign Up